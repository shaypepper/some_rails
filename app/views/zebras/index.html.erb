<p id="notice"><%= notice %></p>

<h1>Listing Zebras</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zebras.each do |zebra| %>
      <tr>
        <td><%= zebra.name %></td>
        <td><%= link_to 'Show', zebra %></td>
        <td><%= link_to 'Edit', edit_zebra_path(zebra) %></td>
        <td><%= link_to 'Destroy', zebra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Zebra', new_zebra_path %>
